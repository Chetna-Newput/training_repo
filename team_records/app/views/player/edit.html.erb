<%= render "team/header" %>
<div class="row">
  <div class="col-sm-3">
    <%= render "team/sidepanel" %>
  </div>
  <div class="col-sm-9">
    <div class="page-header"><h2>Editing Players Details</h2></div>
      <%= form_for :player, url: player_path(@player), method: :patch do |f| %>
        <% if @player.errors.any? %>
          <div id="error_explanation">
            <h2>
                <%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:
            </h2>
            <ul>
              <% @player.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <p>
          <%= f.label :player_name %><br>
          <%= f.text_field :player_name %>
        </p>
        <p>
          <%= f.label :player_age %><br>
          <%= f.text_field :player_age %>
        </p>
    
          <p>
            <%= f.label :player_email %><br>
            <%= f.text_field :player_email %>
          </p>
        
        <p>
          <%= f.label :player_email_confirmation %><br>
          <%= f.text_field :player_email_confirmation %>
        </p>
        <p>
          <%= f.label :Team  %><br>
          <%= f.select :cricket_team_id , teamlist%>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
      <%= link_to 'Back', players_path %>
    </div>
</div>