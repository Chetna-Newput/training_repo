<%= render "header" %>
<div class="row">
  <div class="col-sm-3">
    <%= render "sidepanel" %>
  </div>
  <div class="col-sm-9">
    <div class="page-header"><h2>Listing Players For team </h2></div>
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Email</th>
